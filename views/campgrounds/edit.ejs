<%- include ("../partials/header") %>

	<div class="container">
		<h1 class="text-center my-2">
			Edit
			<%= campground.name %>
		</h1>
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<input type="hidden" name="_method" value="PUT">
				<div class="form-group">
					<label for="exampleInputEmail1">Name</label>
					<input type="text" class="form-control" name="name" value="<%= campground.name %>" placeholder="Name">
				</div>
				<div class="form-group">
						<label for="exampleInputEmail1">Price</label>
						<input type="number" class="form-control" name="price" value="<%= campground.price %>" placeholder="Price" min="100">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Image</label>
					<input type="text" class="form-control" name="image" value="<%= campground.image %>" placeholder="image">
				</div>
				<div class="form-group">
						<label for="exampleInputPassword1">Address</label>
						<input type="text" class="form-control" name="address" value="<%= campground.address %>" placeholder="Address">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Nearby Location</label>
						<input type="text" class="form-control" name="nlocation" value="<%= campground.nlocation %>" placeholder="Nearby Location">
					</div>
					<div class="form-group">
										<label for="exampleInputPassword1">Activities</label>
										<input type="text" class="form-control" name="activities" value="<%= campground.activities %>" placeholder="Activities (Carrom, Trekking, Dart, Swimming, etc)">
									<small id="emailHelp" class="form-text text-muted">If there are no activities then write none</small>
									</div>
					<div class="form-group">
										<label for="exampleInputPassword1">Amenities</label>
										<input type="text" class="form-control" name="amenities" value="<%= campground.amenities %>" placeholder="Amenities (Live music,Games,etc)">
									</div>
									<div class="form-group">
										<label for="exampleInputPassword1">Opening Window</label>
										<input type="text" class="form-control" name="owindow" value="<%= campground.owindow %>" placeholder="Months or all season">
									</div>
					
					<div class="form-group">
						<label for="exampleInputPassword1">Email</label>
						<input type="email" class="form-control" name="email" value="<%= campground.email %>" placeholder="Email">
					</div>
				<div class="form-group">
					<label for="exampleFormControlTextarea1">Description</label>
					<textarea class="form-control" placeholder="description" id="exampleFormControlTextarea1" rows="3" name="description">
						<%= campground.description %>
					</textarea>
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</form>
			<a class="btn btn-primary btn-block my-2" href="/campgrounds">Go back</a>
			</div>
		</div>
	</div>
	<%- include ("../partials/footer") %>