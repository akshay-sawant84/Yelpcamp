<%- include ("partials/header") %>

	<div class="container my-4">
		<h2 class="text-center">
			Sign Up Form
		</h2>
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<form action="/register" method="POST">
					<div class="form-group">
						<label for="exampleInputEmail1">Username</label>
						<input type="text" class="form-control" name="username" placeholder="Username">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Password</label>
						<input type="password" class="form-control" name="password" placeholder="Password">
						<small class="form-text text-muted">7 to 15 characters which contain at least one numeric digit and a special character</small>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Confirm Password</label>
						<input type="password" class="form-control" name="password2" placeholder="Confirm Password">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">First name</label>
						<input type="text" class="form-control" name="firstName" placeholder="First name">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Last name</label>
						<input type="text" class="form-control" name="lastName" placeholder="Last name">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Profile Picture</label>
						<input type="text" class="form-control" name="avatar" placeholder="Avatar URL">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">City</label>
						<input type="text" class="form-control" name="city" placeholder="City">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Birth date</label>
						<input type="date" class="form-control" name="bday" min="1000-01-01" placeholder="Birth Date">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Email</label>
						<input type="email" class="form-control" name="email" placeholder="Email">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Admin Code</label>
						<input type="text" class="form-control" name="adminCode" placeholder="Admin Code">
					<small id="emailHelp" class="form-text text-muted">If You are an admin then type admin code otherwise proceed with your normal registration</small>
						
					</div>
					
					<button type="submit" class="btn btn-primary btn-block">Sign Up</button>
					<a href="/campgrounds" class="btn btn-primary btn-block"><i class="fas fa-arrow-circle-left px-2"></i> Go Back</a>
				</form>
			</div>
		</div>

	</div>

	<%- include ("partials/footer") %>